@model MultiViewModel.ViewModel.GroupViewModel
@{
    ViewBag.Title = "MultiValidation";
}

<h2>MultiValidation</h2>

<hr />
<div class="row">
    <div class="col-md-6 col-sm-12 col-xs-12">
        <div class="panel">
            <div class="panel-heading">
                <h3>Login</h3> 
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Login.Email)
                        @Html.TextBoxFor(m => m.Login.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Login.Email, "", new {@class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Login.Password)
                        @Html.TextBoxFor(m => m.Login.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Login.Password, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        <button class="btn btn-success" type="submit">Login</button>
                    </div>
                }
               
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-12 col-xs-12">
        <div class="panel">
            <div class="panel-heading">
                <h3>Register</h3>  
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Register.Email)
                        @Html.TextBoxFor(m => m.Register.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Register.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Register.Password)
                        @Html.TextBoxFor(m => m.Register.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Register.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Register.Account)
                        @Html.TextBoxFor(m => m.Register.Account, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Register.Account, "", new { @class = "text-danger" })
                    </div>

                    <div>
                        <button class="btn btn-success" type="submit">Register</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}